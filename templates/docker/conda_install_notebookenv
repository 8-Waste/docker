RUN source activate rapids \
    && env \
    && conda list \
    && conda install -y -n rapids --freeze-installed --override-channels \
      -c numba \
      -c conda-forge \
      -c anaconda \
      bokeh \
      dask-labextension \
      ipython=${IPYTHON_VERSION} \
      jupyterlab \
      matplotlib \
      networkx \
      nodejs \
      scikit-learn \
      scipy \
      seaborn \
      tensorflow \
   && conda clean -afy \
   && chmod -R ugo+w /opt/conda && \
   jupyter labextension install dask-labextension
